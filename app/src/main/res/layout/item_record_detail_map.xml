<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/shape_10_radius"
    android:padding="16dp"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/iv_item_record_detail_map_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/shape_10_radius"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_record_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_record_detail_map_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="부산역(고속철도)"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_item_record_detail_map_image"
        app:layout_constraintTop_toTopOf="@id/iv_item_record_detail_map_image" />

    <TextView
        android:id="@+id/tv_item_record_detail_map_address"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="부산 동구 중앙대로 206"
        android:textColor="@color/button_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/iv_item_record_detail_map_image"
        app:layout_constraintTop_toBottomOf="@id/tv_item_record_detail_map_title" />

    <ImageView
        android:id="@+id/iv_item_record_detail_map_pin"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_record_detail_pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/middle_gray" />


    <TextView
        android:id="@+id/tv_record_detail_map_opening_hours_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16sp"
        android:text="@string/item_record_detail_map_opening_hours"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_item_record_detail_map_image"
        app:layout_constraintTop_toBottomOf="@id/tv_item_record_detail_map_address" />

    <TextView
        android:id="@+id/tv_record_detail_map_opening_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="09:00~18:00"
        android:textSize="16sp"
        android:textColor="@color/button_gray"
        app:layout_constraintStart_toEndOf="@id/tv_record_detail_map_opening_hours_title"
        app:layout_constraintTop_toTopOf="@id/tv_record_detail_map_opening_hours_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_detail_map_opening_hours_title"/>

    <TextView
        android:id="@+id/tv_record_detail_map_closed_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/item_record_detail_map_closed_date"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_item_record_detail_map_image"
        app:layout_constraintTop_toBottomOf="@id/tv_record_detail_map_opening_hours_title" />

    <TextView
        android:id="@+id/tv_record_detail_map_closed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="연중무휴"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/tv_record_detail_map_closed_date_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_detail_map_closed_date_title"
        app:layout_constraintStart_toEndOf="@id/tv_record_detail_map_closed_date_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>