<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.route.RouteFragment"
    android:background="@color/white">


  <View
      android:layout_width="2dp"
      android:layout_height="10dp"
      android:background="@color/black"
      app:layout_constraintEnd_toEndOf="@+id/cv_route_view"
      app:layout_constraintStart_toStartOf="@+id/cv_route_view"
      app:layout_constraintTop_toBottomOf="@+id/cv_route_view" />

  <TextView
      android:id="@+id/tv_route_list_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="여행경로"
      android:textSize="19sp"
      android:textStyle="bold"
      android:layout_marginTop="33dp"
      android:layout_marginStart="51dp"
      android:letterSpacing="-0.04"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cv_route_map_frame" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cv_route_view"
      android:layout_width="10dp"
      android:layout_height="10dp"
      android:background="@color/black"
      app:cardCornerRadius="100dp"
      app:layout_constraintBottom_toBottomOf="@+id/tv_route_list_title"
      app:layout_constraintEnd_toStartOf="@+id/tv_route_list_title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_route_list_title">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/cv_route_map_frame"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_route_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop" />
  </androidx.cardview.widget.CardView>



  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/layout_route_finish_button"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:background="@drawable/shape_white_10_radius"
      android:backgroundTint="@color/main_blue"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="24dp"
      android:layout_marginStart="24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:layout_editor_absoluteX="24dp">

    <TextView
        android:id="@+id/tv_route_finish_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록 완료"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:letterSpacing="-0.04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_savephoto_recyclerview"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginBottom="5dp"
      app:layout_constraintBottom_toTopOf="@+id/layout_route_finish_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_route_list_title"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:itemCount="3"
      tools:listitem="@layout/item_save_photo_list" />

  <ImageView
      android:id="@+id/img_load"
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:layout_constraintBottom_toTopOf="@+id/rv_savephoto_recyclerview"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cv_route_map_frame" />

  <ImageButton
      android:id="@+id/iv_tooltip"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:src="@drawable/ic_route_photo"
      app:layout_constraintBottom_toTopOf="@+id/rv_savephoto_recyclerview"
      app:layout_constraintEnd_toStartOf="@+id/img_load"
      app:layout_constraintTop_toBottomOf="@+id/cv_route_map_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>