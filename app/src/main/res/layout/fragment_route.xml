<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.route.RouteFragment"
    android:background="@color/white">

    <View
        android:layout_width="2.5dp"
        android:layout_height="10dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/cv_route_view"
        app:layout_constraintStart_toStartOf="@+id/cv_route_view"
        app:layout_constraintTop_toBottomOf="@+id/cv_route_view" />

    <TextView
        android:id="@+id/tv_route_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행경로"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="33dp"
        android:layout_marginStart="51dp"
        android:letterSpacing="-0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_route_map_frame" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_route_view"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/black"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_route_list_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_route_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_route_list_title">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_route_map_frame"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.naver.maps.map.MapView
            android:id="@+id/mv_route"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_route_finish"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_mainblue_10_radius"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_route_finish_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경로 기록"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:letterSpacing="-0.04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_route_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_route_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_route_list_title"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="3"
        tools:listitem="@layout/item_route_list" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_route_empty_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_route_recyclerview">

        <ImageView
            android:id="@+id/iv_route_empty"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_route_list_empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="선택된 경로가 없습니다."
            android:letterSpacing="-0.04"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_route_empty" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>