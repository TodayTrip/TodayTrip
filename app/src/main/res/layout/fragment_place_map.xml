    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_place_map_category_tab"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="8dp"
        android:background="@drawable/dialog_round"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:textAlignment="center"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/SmallBoldText"
        app:tabTextColor="@color/middle_gray"
        app:tabIndicatorColor="@color/main_blue"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorGravity="bottom"
        app:tabRippleColor="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_place_map_tourist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/place_list_tourist_attraction"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_place_map_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/place_list_restaurant"

            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_place_map_cafe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/place_list_cafe"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_place_map_event"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/place_list_event"
            />


    </com.google.android.material.tabs.TabLayout>

