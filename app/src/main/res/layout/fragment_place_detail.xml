<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.place_detail.PlaceDetailFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_place_detail_pic"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_place_detail_top_blur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/blur_top"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_place_detail_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="1dp"
        android:src="@drawable/ic_back"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_place_detail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_place_detail_title"
                    style="@style/MiddleTitleBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:maxWidth="320dp"
                    android:text="가게명"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_place_detail_pin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_pin_outline"

                    app:layout_constraintBottom_toBottomOf="@+id/tv_place_detail_title"
                    app:layout_constraintStart_toEndOf="@+id/tv_place_detail_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_place_detail_title" />

                <ImageView
                    android:id="@+id/iv_place_detail_loca"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_location"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_detail_title" />

                <TextView
                    android:id="@+id/tv_place_detail_loca"
                    style="@style/SmallBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="주소"
                    android:textStyle="normal"

                    app:layout_constraintBottom_toBottomOf="@+id/iv_place_detail_loca"
                    app:layout_constraintStart_toEndOf="@+id/iv_place_detail_loca"
                    app:layout_constraintTop_toTopOf="@+id/iv_place_detail_loca" />

                <ImageView
                    android:id="@+id/iv_place_detail_time"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_time"

                    app:layout_constraintStart_toStartOf="@id/iv_place_detail_loca"
                    app:layout_constraintTop_toBottomOf="@+id/iv_place_detail_loca" />

                <TextView
                    android:id="@+id/tv_place_detail_time"
                    style="@style/SmallBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="영업시간"
                    android:textStyle="normal"

                    app:layout_constraintBottom_toBottomOf="@+id/iv_place_detail_time"
                    app:layout_constraintStart_toEndOf="@+id/iv_place_detail_time"
                    app:layout_constraintTop_toTopOf="@+id/iv_place_detail_time" />

                <ImageView
                    android:id="@+id/iv_place_detail_info"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_info"

                    app:layout_constraintStart_toStartOf="@id/iv_place_detail_time"
                    app:layout_constraintTop_toBottomOf="@+id/iv_place_detail_time" />

                <TextView
                    android:id="@+id/tv_place_detail_info"
                    style="@style/SmallBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="추가정보"
                    android:textStyle="normal"

                    app:layout_constraintBottom_toBottomOf="@+id/iv_place_detail_info"
                    app:layout_constraintStart_toEndOf="@+id/iv_place_detail_info"
                    app:layout_constraintTop_toTopOf="@+id/iv_place_detail_info" />

                <ImageView
                    android:id="@+id/iv_place_detail_summary"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_store_info"

                    app:layout_constraintStart_toStartOf="@id/iv_place_detail_info"
                    app:layout_constraintTop_toBottomOf="@+id/iv_place_detail_info" />

                <TextView
                    android:id="@+id/tv_place_detail_summary"
                    style="@style/SmallBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="개요"
                    android:textStyle="normal"

                    app:layout_constraintBottom_toBottomOf="@+id/iv_place_detail_summary"
                    app:layout_constraintStart_toEndOf="@+id/iv_place_detail_summary"
                    app:layout_constraintTop_toTopOf="@+id/iv_place_detail_summary" />

                <TextView
                    android:id="@+id/tv_place_detail_add_path_btn"
                    style="@style/RandomThemeBlueBoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/shape_btn_main_blue"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/place_detail_add_to_path"
                    android:textColor="@color/white"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_place_detail_summary" />

                <TextView
                    android:id="@+id/tv_place_detail_my_memory_title"
                    style="@style/MiddleTitleBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/place_detail_my_memory"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_detail_add_path_btn" />

                <TextView
                    android:id="@+id/tv_place_detail_no_photo"
                    style="@style/TinyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:text="@string/place_detail_no_photo"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_detail_my_memory_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_place_detail_my_memory_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_detail_my_memory_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>