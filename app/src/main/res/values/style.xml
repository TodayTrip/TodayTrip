<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeTitleBoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MiddleTitleBoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MiddleTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallBoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SmallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PlaceTitleBoldText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/place_title_gray</item>
    </style>
    <style name="PlaceLabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="PlaceAddrText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/place_addr_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="PlaceLabelInfoText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/place_detail_info_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TinyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

<!--  RandomThemeFragment에서 7개가 중복돼서 marginStart, marginTop, 파란글자를 고정값으로 지정해놨습니다.   -->
    <style name="RandomThemeBlueBoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentBottomSheetDialogFragment" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

</resources>